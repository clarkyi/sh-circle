<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class: "form-signin"}) do |f| %>
  <%content_for :notice do%>
    <%= render "shared/notice", messages: resource.errors.full_messages, notice: 'failure'%>
  <%end if resource.errors.present?%>
  <h2 class="form-signin-heading">Sign up</h2>
  <label for="inputEmail" class="sr-only">Email address</label>
  <%= f.email_field :email,placeholder: "邮箱", autocomplete: "off", class: "form-control", required: "required" %>
  
  <label for="inputEmail" class="sr-only">昵称</label>
  <%= f.text_field :nikename, placeholder: "昵称", autocomplete: "off", class: "form-control", required: "required" %>

  <label for="inputPassword" class="sr-only">Password</label>
  <%= f.password_field :password, placeholder: "密码",autocomplete: "off", class: "form-control", required: "required"%>
  
  <label for="password_confirmation" class="sr-only">Password</label>
  <%= f.password_field :password_confirmation,placeholder: "确认密码", class: "form-control", autocomplete: "off", required: "required" %>
  <div class="actions">
    <%= f.submit "注册", class: 'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>