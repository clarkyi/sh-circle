<!DOCTYPE html>
<html lang="cn">
  <head>
    <title>圈子</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'admins/simple-line-icons', media: 'all', 'data-turbolinks-track': 'reload'%>
    <%= stylesheet_link_tag 'admins/style', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="app header-fixed sidebar-fixed aside-menu-fixed aside-menu-hidden">
    <%- if admin_signed_in? %>
      <%= render "layouts/admin_nav"%>
      <div class="app-body">
        <%=yield %>
      </div>
    <%else%>
      <div class="container">
        <%=yield %>
      </div>
    <% end -%>
  </body>
</html>